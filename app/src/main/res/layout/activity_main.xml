<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="id.sch.smktelkom_mlg.tugas01.xirpl2014.myproject.MainActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembelian Tiket Kereta Api Online"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="78dp"
            android:layout_marginStart="78dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:id="@+id/textViewNm"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Identitas"
            android:id="@+id/textViewId"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textViewNm"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_alignBottom="@+id/textViewNm"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:inputType="numberSigned"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/editText"
            android:layout_toRightOf="@+id/textViewId"
            android:layout_toEndOf="@+id/textViewId" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tujuan"
                android:id="@+id/textViewTj"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/editText2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tujuan"
                android:id="@+id/spinnerTujuan"
                android:layout_below="@+id/textViewTj"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keberangkatan"
                android:id="@+id/textViewBrgkt"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/spinnerTujuan"
                android:layout_alignRight="@+id/editText2"
                android:layout_alignEnd="@+id/editText2" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/berangkat"
                android:id="@+id/spinnerKeberangkatan"
                android:layout_below="@+id/textViewBrgkt"
                android:layout_alignRight="@+id/editText2"
                android:layout_alignEnd="@+id/editText2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:id="@+id/textViewTgl"
            android:layout_below="@+id/spinnerKeberangkatan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Tiket"
            android:id="@+id/textViewJmlhTk"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/textViewTgl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dewasa"
            android:id="@+id/checkBoxDws"
            android:layout_alignTop="@+id/textViewJmlhTk"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignStart="@+id/editText3" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anak-anak"
            android:id="@+id/checkBoxAnk"
            android:layout_below="@+id/checkBoxDws"
            android:layout_alignLeft="@+id/checkBoxDws"
            android:layout_alignStart="@+id/checkBoxDws" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disabilitas"
            android:id="@+id/checkBoxDsbl"
            android:layout_below="@+id/checkBoxAnk"
            android:layout_alignLeft="@+id/checkBoxAnk"
            android:layout_alignStart="@+id/checkBoxAnk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama KA"
            android:id="@+id/textViewNmKA"
            android:layout_below="@+id/checkBoxDsbl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/textViewNmKA"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/checkBoxDsbl"
            android:layout_alignStart="@+id/checkBoxDsbl"
            android:id="@+id/radioGroup">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KA Semeru"
                android:id="@+id/radioButtonKA1"
                android:layout_below="@+id/checkBoxDsbl"
                android:layout_alignLeft="@+id/checkBoxDsbl"
                android:layout_alignStart="@+id/checkBoxDsbl" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KA Tambora"
                android:id="@+id/radioButtonKA2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KA Gajayana"
                android:id="@+id/radioButtonKA3"
                android:layout_below="@+id/radioGroup"
                android:layout_alignLeft="@+id/radioGroup"
                android:layout_alignStart="@+id/radioGroup" />

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/buttonOK"
            android:layout_below="@+id/radioGroup"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:id="@+id/textViewHasil"
            android:layout_below="@+id/buttonOK"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_above="@+id/textViewJmlhTk"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Format penulisan tanggal tgl/bln/thn*"
            android:id="@+id/textView2"
            android:layout_below="@+id/editText3"
            android:layout_alignLeft="@+id/checkBoxDws"
            android:layout_alignStart="@+id/checkBoxDws" />

    </RelativeLayout>
    </ScrollView>